<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_2"
    android:orientation="vertical" >

    <include layout="@layout/include_title_layout" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5f5f5f" />

    <RelativeLayout
        android:id="@+id/bell_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TextView
            android:id="@+id/bell_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铃声"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/bell_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bell_tv"
            android:text="无"
            android:textColor="#5f5f5f"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/more1" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5f5f5f" />

    <RelativeLayout
        android:id="@+id/vibration_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp" >

        <TextView
            android:id="@+id/vibration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="震动"
            android:textColor="#000000"
            android:textSize="18dp" />

        <com.widget.UISwitchButton
            android:id="@+id/vibration_open_send"
            android:layout_width="32dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5f5f5f" />

</LinearLayout>